<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--红色主题-->
    <style name="AppPinkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/bili_color_pink</item>
        <item name="colorPrimaryDark">@color/bili_color_pink</item>
        <item name="android:windowBackground">@color/bili_color_light_gray</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
    </style>
</resources>
