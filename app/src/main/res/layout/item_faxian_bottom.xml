<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/faxian_bottom_quanzi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_bg_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_quanzi"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="兴趣圈"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/faxian_bottom_discovery_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/anim_discovery_new"/>
    </RelativeLayout>

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/faxian_bottom_rank_original"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/ripple_bg_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_btn_rank_original"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="原创排行榜"
            android:textColor="@android:color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_gray_arrow_right"/>
    </RelativeLayout>

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/faxian_bottom_rank_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/ripple_bg_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_btn_rank_all"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="全区排行榜"
            android:textColor="@android:color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_gray_arrow_right"/>
    </RelativeLayout>


    <RelativeLayout
        android:clickable="true"
        android:id="@+id/faxian_bottom_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/ripple_bg_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_btn_game"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="游戏中心"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/faxian_bottom_biliyoo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/ripple_bg_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_btn_biliyoo"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="日本游"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

</LinearLayout>